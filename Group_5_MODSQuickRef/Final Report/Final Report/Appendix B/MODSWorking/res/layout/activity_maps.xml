<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="fau.edu.mods.Maps"
    tools:ignore="MergeRootFrame"
    android:background="@drawable/maps_background" >"

    <ImageButton
        android:id="@+id/imageHomeButton"
        android:layout_width="102dp"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:onClick="openHome"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/home_button" />

    <ImageButton
        android:id="@+id/roadViewButton"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/secondFloorButton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:onClick="openRoadView"
        android:scaleType="fitXY"
        android:src="@drawable/background_button_one"
        android:text="@string/button_road_view" />

    <ImageButton
        android:id="@+id/firstFloorButton"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/roadViewButton"
        android:layout_below="@+id/roadViewButton"
        android:layout_marginTop="39dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:onClick="openFirstFloor"
        android:scaleType="fitXY"
        android:src="@drawable/background_button_two"
        android:text="@string/button_first_floor" />

    <ImageButton
        android:id="@+id/secondFloorButton"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_above="@+id/imageHomeButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:onClick="openSecondFloor"
        android:scaleType="fitXY"
        android:src="@drawable/background_button_three"
        android:text="@string/button_second_floor" />

</RelativeLayout>