<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fau.edu.mods.MainActivity"
    tools:ignore="MergeRootFrame"
    android:orientation="vertical"
    android:background="@drawable/main_screen_background"
    android:animateLayoutChanges="true" >
    <ImageButton
        android:id="@+id/imageImageButton0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:onClick="openMainScreenLogo"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_screen_logo" />

    <ImageButton
        android:id="@+id/imageHomeButton"
        android:layout_width="102dp"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:onClick="openHome"
        android:scaleType="fitXY"
        android:src="@drawable/home_button" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_above="@+id/imageButton2"
        android:layout_alignRight="@+id/imageImageButton0"
        android:layout_marginBottom="43dp"
        android:layout_marginRight="142dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:onClick="openTodaysHour"
        android:scaleType="fitXY"
        android:src="@drawable/today_hour" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_above="@+id/imageHomeButton"
        android:layout_alignLeft="@+id/imageButton1"
        android:layout_marginBottom="79dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:onClick="openSpecialEvents"
        android:scaleType="fitXY"
        android:src="@drawable/special_event" />
    
</RelativeLayout>

