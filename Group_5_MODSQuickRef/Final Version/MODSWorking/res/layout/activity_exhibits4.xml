<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="fau.edu.mods.Exhibits"
    tools:ignore="MergeRootFrame" 
    android:background="@drawable/exhibits_background">

    <ImageButton
        android:id="@+id/imageHomeButton"
        android:layout_width="102dp"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:onClick="openHome"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/home_button" />

    <ImageView 
        android:id="@+id/imageHawksBill"
         android:layout_width="290dp"
         android:layout_height="190dp"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:adjustViewBounds="true"
         android:background="@android:color/transparent"
         android:scaleType="fitXY"
         android:src="@drawable/hawks_bill"/>

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_centerVertical="true"
         android:gravity="center"
         android:text="The hawksbill turtle is small to medium-sized compared to other sea turtle species. Their head is elongated and tapers to a point, with a beak-like mouth that gives the species its name. The shape of the mouth allows the hawksbill turtle to reach into holes and crevices of coral reefs to find sponges, their primary food source as adults, and other invertebrates. Hawksbill turtles are unique among sea turtles in that they have two pairs of prefrontal scales on the top of the head and each of the flippers usually has two claws."
         android:textSize="25dp" />

</RelativeLayout>

